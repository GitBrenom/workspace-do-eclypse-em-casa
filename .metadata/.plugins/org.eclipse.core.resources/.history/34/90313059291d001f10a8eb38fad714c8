package controller;

import util.Teclado;

public class Questao03 {

	public static void main(String[] args) {
		/*
		 * Desenvolver um programa que crie uma matriz de 4 linhas e 3 colunas. Pergunte
		 * ao usuário números para preencher toda a matriz, e ao final, exiba a matriz
		 * inteira e a soma dos números pares contidos na matriz.
		 */

		
		
		int mat[][] = new int[4][3];
		int soma = 0;
		
		for(int lin = 0; lin < 4; lin++) {
		for (int col = 0; col < 3; col++) {
			
			
			mat[lin][col] = Teclado.lerInt("[" + lin + "][" + col+ "] numero?");
			
			if ( mat[lin][col] % 2 == 0) {
				soma = soma + mat[lin][col];
			}
			
		}//fim do for col
		}//fim do for lin
		
		
		
		for(int lin = 0; lin < 4; lin++) {
			for (int col = 0; col < 3; col++) {
				
				
				System.out.println("matriz completa " + mat[lin][col]);
				
				
			}//fim do for col
			}//fim do for lin
			
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
